{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appServicePlanName": {
      "type": "string",
      "defaultValue": "cloud-website-plan",
      "metadata": {
        "description": "Name des App Service Plans"
      }
    },
    "webAppName": {
      "type": "string",
      "metadata": {
        "description": "Eindeutiger Name der Web App (wird Teil der URL)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure Region f√ºr alle Ressourcen"
      }
    },
    "appServicePlanSku": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": ["F1", "S1"],
      "metadata": {
        "description": "SKU des App Service Plans: F1 (Free) oder S1 (Standard)"
      }
    },
    "cdnProfileName": {
      "type": "string",
      "defaultValue": "cloud-website-cdn",
      "metadata": {
        "description": "Name des CDN Profils"
      }
    },
    "cdnEndpointName": {
      "type": "string",
      "metadata": {
        "description": "Eindeutiger Name des CDN Endpoints"
      }
    }
  },
  "variables": {
    "appInsightsName": "[concat(parameters('webAppName'), '-insights')]",
    "isStandardTier": "[equals(parameters('appServicePlanSku'), 'S1')]",
    "autoScaleSettingsName": "[concat(parameters('appServicePlanName'), '-autoscale')]",
    "skuName": "[if(variables('isStandardTier'), 'S1', 'F1')]",
    "skuTier": "[if(variables('isStandardTier'), 'Standard', 'Free')]",
    "skuCapacity": "[if(variables('isStandardTier'), 1, 1)]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-09-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[variables('skuName')]",
        "tier": "[variables('skuTier')]",
        "capacity": "[variables('skuCapacity')]"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "[resourceId('Microsoft.Insights/components', variables('appInsightsName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "appSettings": [
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('Microsoft.Insights/components', variables('appInsightsName'))).InstrumentationKey]"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[reference(resourceId('Microsoft.Insights/components', variables('appInsightsName'))).ConnectionString]"
            }
          ],
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2"
        }
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[variables('appInsightsName')]",
      "location": "[parameters('location')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web",
        "RetentionInDays": 90
      }
    },
    {
      "condition": "[variables('isStandardTier')]",
      "type": "Microsoft.Insights/autoscalesettings",
      "apiVersion": "2022-10-01",
      "name": "[variables('autoScaleSettingsName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
      ],
      "properties": {
        "name": "[variables('autoScaleSettingsName')]",
        "targetResourceUri": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "enabled": true,
        "profiles": [
          {
            "name": "DefaultAutoScaleProfile",
            "capacity": {
              "minimum": "1",
              "maximum": "3",
              "default": "1"
            },
            "rules": [
              {
                "metricTrigger": {
                  "metricName": "CpuPercentage",
                  "metricResourceUri": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT5M",
                  "timeAggregation": "Average",
                  "operator": "GreaterThan",
                  "threshold": 70
                },
                "scaleAction": {
                  "direction": "Increase",
                  "type": "ChangeCount",
                  "value": "1",
                  "cooldown": "PT5M"
                }
              },
              {
                "metricTrigger": {
                  "metricName": "CpuPercentage",
                  "metricResourceUri": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT5M",
                  "timeAggregation": "Average",
                  "operator": "LessThan",
                  "threshold": 30
                },
                "scaleAction": {
                  "direction": "Decrease",
                  "type": "ChangeCount",
                  "value": "1",
                  "cooldown": "PT5M"
                }
              }
            ]
          }
        ]
      }
    }
  ],
  "outputs": {
    "webAppUrl": {
      "type": "string",
      "value": "[concat('https://', parameters('webAppName'), '.azurewebsites.net')]"
    },
    "cdnEndpointUrl": {
      "type": "string",
      "value": "[concat('https://', parameters('cdnEndpointName'), '.azureedge.net')]"
    },
    "appInsightsInstrumentationKey": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Insights/components', variables('appInsightsName'))).InstrumentationKey]"
    },
    "currentSku": {
      "type": "string",
      "value": "[parameters('appServicePlanSku')]"
    }
  }
}
